<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.GoalInfoFragment">

    <LinearLayout
        android:id="@+id/addGoalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/all_rounded_white_background"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/investmentIsForTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Who is this investment for ?*"
            android:textColor="@color/dark_black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/shimmerColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Is the equity one time or recurring ?"
            android:textColor="@color/dark_black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/fixedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fixed"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/investmentTypeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:checked="false" />

            <TextView
                android:id="@+id/variableTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Variable"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/selectPurchaseDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Date of Purchase"
            android:textColor="#646464"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/shimmerColor" />

        <EditText
            android:id="@+id/purchaseUnitEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:hint="Number of Units"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:textColor="#646464"
            android:textColorHint="@color/dark_black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/shimmerColor" />

        <EditText
            android:id="@+id/purchasePriceEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:hint="Purchase Price"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textColor="#646464"
            android:textColorHint="@color/dark_black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/shimmerColor" />

        <TextView
            android:id="@+id/addMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/complete_orange_round_background"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="Add More"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/knowYouLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/all_rounded_white_background"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/enterNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:hint="Enter Your Name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textColor="#646464"
            android:textColorHint="@color/dark_black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/shimmerColor" />

        <EditText
            android:id="@+id/enterAgeEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:hint="Enter Age"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColor="#646464"
            android:textColorHint="@color/dark_black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/shimmerColor" />

        <TextView
            android:id="@+id/selectDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Date of Birth ?"
            android:textColor="#646464"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="30dp"
            android:background="@color/shimmerColor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/riskLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/all_rounded_white_background"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Know Your Risk"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

</FrameLayout>